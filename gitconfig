[user]
	name = Hiro Asari
	email = asari.ruby@gmail.com
[push]
  default = simple
[alias]
  pager = !$HOME/personal/bin/git-pager \"$@\"
  info = !$HOME/personal/bin/git-info \"$@\"
  editor = !$HOME/bin/git-editor \"$@\"
  loglive = !$HOME/personal/bin/git-loglive \"$@\"
  ci     = commit -v
  co     = checkout
  svnup  = svn fetch
  sup    = svn fetch
  svnci  = svn dcommit
  sci    = svn dcommit
  up     = pull --rebase
  p      = pull
  sreb   = svn rebase
  srt    = svn rebase remotes/trunk
  srebt  = svn rebase remotes/trunk
  reb    = rebase
  tree   = log --oneline --graph --decorate
	d = diff --no-ext-diff --color-words
	st = status -sb
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
	lol = log --oneline --graph --decorate --all
	unadd = reset HEAD
	amend = commit --amend
; delete-merged-branches
	dmb = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
	latest = for-each-ref --count=10 --sort=-committerdate --format='%(committerdate:short) %(refname:short)'
  squash =!sh -c 'gsq \"$@\"'
[rerere]
  enabled = 1
[core]
  ; autocrlf = input
	safecrlf = true
	excludesfile = /Users/asari/.gitignore_global
	pager = zsh -lc 'diff-highlight | strip_diff_leading_symbols | less -r' -
[color]
	ui = auto
[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[credential]
	helper = osxkeychain
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[difftool "Kaleidoscope"]
         cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
         tool = Kaleidoscope
[difftool]
         prompt = false
[mergetool "Kaleidoscope"]
         cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
                trustExitCode = true
[mergetool]
         prompt = false
[merge]
         tool = Kaleidoscope
